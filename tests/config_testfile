    include       mime.types;
    server {
        listen       80;
        root html;
        location / {
            index  index.html index.htm;
            not aaa;
        }
        location /abc {
            root  /user/sanam;
            index  hahahoho.html;
        }
    }
    server {
        listen       8080;
        location /please {
            root   html;
            index  index.html index.htm;
        }
