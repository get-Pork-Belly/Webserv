http { 
    include mime.types;
    root /test/folder;
    server {
        server_name first_server;
        root html;
        listen 8081;
        location / {
            index  index.html index.htm;
            limit_except GET POST
        }
        location /abc {
            root  /user/sanam;
            index  hahahoho.html;
        }
    }
    server {
        server_name second_server;
        listen       8080;
        location /please {
            index  index.html index.htm;
        }
        location /only-put {
            root  /user/iwoo;
            index  html;
            limit_except PUT
        }
    }
}
