http { 
    include mime.types;
    root /test/folder;
    server {
        server_name first_server;
        listen       8080;
        location /one {
            index  index.html index.htm;
        }
        location /one/two {
            root  /user/iwoo;
            index  html;
            limit_except PUT
        }
    }
    server {
        server_name second_server;
        listen       8081;
        location /first {
            index  index.html index.htm;
        }
        location /second {
            root  /user/iwoo;
            index  html;
            limit_except PUT POST GET
        }
    }
}

GET /second HTTP:1.0
