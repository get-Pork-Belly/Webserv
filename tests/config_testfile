http { 
    include mime.types;
    root /555/444/;
    server {
        server_name first_server;
        listen       8080;

        location /folder {
            root /111/;
        }
        location /folder/folder {
            root /222/111/;
        }
        location /folder/folder/folder {
            root /333/222/111/;
        }
    }
    server {
        server_name second_server;
        listen       8081;
        location /first {
            index  index.html index.htm;
        }
        location /second {
            root  /user/iwoo;
            index  html;
            limit_except PUT POST GET
        }
    }
}

GET /second HTTP:1.0
