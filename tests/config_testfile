http { 
    include mime.types;
    root /555/444/;
    server {
        server_name first_server;
        listen       8080;

        location /folder {
            cgi .bin .cgi .bla;
            root /goinfre/iwoo/;
        }
    }
    server {
        server_name second_server;
        listen       8081;
        location /first {
            index  index.html index.htm;
        }
        location /second {
            root  /user/iwoo;
            index  html;
