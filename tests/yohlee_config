http { 
    include mime.types;
    root /goinfre/yohlee/Webserv/
    server {
        server_name first_server;
        listen       8080;

        location /folder {
            cgi_path /goinfre/yohlee/Webserv/cgi_tester;

            cgi .bin .cgi .bla;
            autoindex on;
            root /goinfre/yohlee/Webserv/tests/;
        }

        location / {
            cgi_path /goinfre/yohlee/Webserv/cgi_tester;

            cgi .bin .cgi .bla;
            autoindex on;
            root /goinfre/yohlee/Webserv/;

            auth_basic yohlee;
            auth_basic_user_file yohlee:123123;
        }

        location /directory {
            root 		/goinfre/yohlee/Webserv/www/YoupiBanane;
            index 		youpi.bad_extension;
            cgi 		.bla;
            cgi_path    /goinfre/yohlee/Webserv/cgi_tester;
        }
    }
    
    server {
        server_name second_server;
        listen       8081;
        location /first {
            index  index.html index.htm;
        }
        location /second {
            root  /user/iwoo;
            index  html;
            limit_except PUT POST GET
            index index.html index.htm index.abc;
        }
    }
}
