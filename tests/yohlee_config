http { 
    include mime.types;
    root /Users/yohan/Webserv/;
    server {
        server_name first_server;
        listen       8080;

        location / {
            limit_except GET;
            cgi .bin .cgi .bla;
            cgi_path /Users/yohan/Webserv/cgi_tester;
            autoindex on;
            root /Users/yohan/Webserv/;
        }
        location /put_test {
            limit_except PUT;
            root /Users/yohan/Webserv/tests/put_test;
            cgi .bla;
            cgi_path /Users/yohan/Webserv/cgi_tester;
        }
        location /post_body {
            limit_client_body_size 100;
            limit_except POST;
            index index.html;
            root /Users/yohan/Webserv/tests/folder;
        }
        location /directory { 
            limit_except GET POST;
            index youpi.bad_extension;
            cgi .bla;
            cgi_path /Users/yohan/Webserv/cgi_tester;
            root /Users/yohan/Webserv/YoupiBanane;
        }
    }
    server {
        server_name second_server;
        listen       8081;
        location /first {
            index  index.html index.htm;
        }
        location /second {
            root /Users/yohan/Webserv/tests/;
            index  html;
            limit_except PUT POST GET;
            index index.html index.htm index.abc;
        }
    }
}
