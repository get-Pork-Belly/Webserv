http { 
    include mime.types;
    root /Users/humblego/Documents/dev/team_webserv/;
    server {
        server_name first_server;
        listen       8080;

        location /route {
            cgi .bin .cgi .bla;
            autoindex on;
            root /Users/humblego/Documents/dev/team_webserv/tests/;
        }
        location /old-route {
            return 301 /route;
        }
    }
    server {
        server_name second_server;
        listen       8081;
        location /first {
            index  index.html index.htm;
        }
        location /second {
            root /Users/humblego/Documents/dev/dev/team_webserv/tests/;
            index  html;
            limit_except PUT POST GET
            index index.html index.htm index.abc;
        }
    }
}
