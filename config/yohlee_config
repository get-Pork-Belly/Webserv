http { 
    include mime.types;
    root /Users/yohan/Webserv/;
    plugins accept_language show_location_msg check_timeout log_at;
    client_timeout_second 5;
    cgi_timeout_second 180;
    log_at log.txt;
    server {
        server_name first_server;
        listen       8080;
        location / {
            limit_except GET;
            cgi .bin .cgi .bla;
            cgi_path /Users/yohan/Webserv/cgi_tester;
            autoindex on;
            location_msg 'this is default route';
            root /Users/yohan/Webserv/;
        }
        location /put_test {
            limit_except PUT;
            root /Users/yohan/Webserv/tests/put_test;
            location_msg "this is put_test route";
            cgi .bla;
            cgi_path /Users/yohan/Webserv/cgi_tester;
        }
        location /post_body {
            limit_client_body_size 100;
            limit_except POST;
            location_msg "this is post_body route";
            index index.html;
            root /Users/yohan/Webserv/tests/folder;
        }
        location /directory { 
            limit_except GET POST;
            index youpi.bad_extension;
            location_msg "this is directory route + home root is: $HOME";
            cgi .bla;
            cgi_path /Users/yohan/Webserv/cgi_tester;
            root /Users/yohan/Webserv/YoupiBanane;
        }
    }
    server {
        server_name second_server;
        listen       8081;
        location /first {
            index  index.html index.htm;
        }
        location /second {
            root /Users/yohan/Webserv/tests/;
            index  html;
            limit_except PUT POST GET;
            index index.html index.htm index.abc;
        }
    }
}
